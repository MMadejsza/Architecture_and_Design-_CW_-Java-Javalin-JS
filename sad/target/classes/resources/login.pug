html(lang="en")
    head
        // Meta tags
        meta(charset="UTF-8")
        title SAD Project
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        // Website description for SEO
        meta(name="description", content="Architecture and Design Coursework")
        meta(name="author", content="MMadejsza, AdamT-S, Raja108N, unaisq1")
        meta(name="keywords", content="SAD, stock, Java, architecture, n-tiered, adapter")
        // FAVICONS info
        link(rel="icon", href="./favicon.png", type="image/png", sizes="18x18")
        // Outside styling and links info
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap", rel="stylesheet")        
        link(rel="stylesheet", type="text/css", href="./style.css")

        link(rel="stylesheet", type="text/css", href="./login.css")

    body
        nav.nav
            ul
                li
                    a(href="/") 
                        i.fas.fa-home 
                        | Home
                li
                    a.active(href="./login")
                        i.fas.fa-user
                        | Login
                li.loginDepended
                    a(href="./stocks")
                        i.fas.fa-search-dollar
                        | Stocks
                li.loginDepended
                    a(href="./watchList")
                        i.far.fa-eye
                        | Watch Lists
                li.loginDepended
                    a(href="./portfolio")
                        i.fas.fa-coins
                        | Portfolio
                li
                    a(href="./about")
                        i.far.fa-copyright
                        | About
                li.wrench.loginDepended
                  i.fas.fa-wrench
                  ul.colorSettingsList
                    li.settings
                      input(type="color", id="inputColor")
                    li.settings.logout
                      a(href="./login")
                        i.fas.fa-power-off
        block content
         header
          main.loginBox
            form.loginForm(action="", method="POST")
              h1 Log in!
              label(for="login")
              input.login(type="text", placeholder="User Name", name='login-sad')
              input.password(type="text", placeholder="Password", name='login-sad')
            div.registerQuestionBlock
              input(type="checkbox", name="registerInput", id="registerInput")
              label(for="registerInput") Register?
            form.registerForm(action="/register", method="POST")
              h1 Register now!
              label(for="login")
              input.login(type="text", placeholder="User Name", name='register')
              input.password(type="text", placeholder="Password", name='register')
            button.loginBtn(name='login') Log in
            button.loginBtn.hideBtn(name='register')  Register
                        
        script(src="https://kit.fontawesome.com/4622d99ad4.js", crossorigin="anonymous")
        script(src="./app.js")
        
        script(src="./login.js")

